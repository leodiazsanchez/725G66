<UserControl x:Class="ChatApp.View.MessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Data="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ChatApp.View"
             mc:Ignorable="Data"
             Data:DesignHeight="450"
             Data:DesignWidth="800">


    <UserControl.Resources>

        <!-- Style for Rounded TextBox -->
        <Style x:Key="RoundedTextBox"
               TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background"
                    Value="#FF1E1E1E" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="BorderBrush"
                    Value="#FF007ACC" />
            <Setter Property="BorderThickness"
                    Value="2" />
            <Setter Property="Padding"
                    Value="10" />
            <Setter Property="FontSize"
                    Value="16" />
        </Style>


        <!-- Message Template Selector -->


        <DataTemplate x:Key="UserMessageTemplate">
            <Grid HorizontalAlignment="Right">
                <Border Background="#FF007ACC"
                        CornerRadius="15"
                        Padding="10">
                    <TextBlock Text="{Binding Content}"
                               Foreground="White"
                               TextWrapping="Wrap" />
                </Border>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ReceivedMessageTemplate">
            <Border Background="#FF1E1E1E"
                    CornerRadius="15"
                    Padding="10"
                    HorizontalAlignment="Left">
                <TextBlock Text="{Binding Content}"
                           Foreground="White"
                           TextWrapping="Wrap" />
            </Border>
        </DataTemplate>

        <!-- MessageTemplateSelector -->
        <local:MessageTemplateSelector x:Key="MessageTemplateSelector"
                                       UserMessageTemplate="{StaticResource UserMessageTemplate}"
                                       ReceivedMessageTemplate="{StaticResource ReceivedMessageTemplate}" />
    </UserControl.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Title area -->
            <RowDefinition Height="*" />
            <!-- Chat messages area -->
            <RowDefinition Height="Auto" />
            <!-- Input area -->
        </Grid.RowDefinitions>

        <!-- Title for the chat -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding TargetUserName}"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="White"
                       VerticalAlignment="Center" />

            <Button Grid.Column="2"
                    Width="32"
                    Height="32"
                    Background="Red"
                    BorderBrush="{x:Null}"
                    Cursor="Hand"
                    Command="{Binding DisconnectCommand}"
                    Margin="5,5,0,5">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="16"
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Button.Content>
                    <Canvas Background="White">
                        <!-- X Icon -->
                        <Path Data="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"
                              Fill="White"
                              Width="16"
                              Height="16"
                              Canvas.Left="-8"
                              Canvas.Top="-8" />
                    </Canvas>
                </Button.Content>
            </Button>


        </Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Grid.Row="1">
            <ScrollViewer.Resources>
                <!-- Style for the ScrollBar -->
                <Style TargetType="ScrollBar">
                    <Setter Property="Width"
                            Value="10" />
                    <Setter Property="Margin"
                            Value="0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid>
                                    <Track Name="PART_Track"
                                           IsDirectionReversed="true">
                                        <Track.Thumb>
                                            <Thumb Name="PART_Thumb"
                                                   Background="#FF1E1E1E"
                                                   Width="10">
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="5" />
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                
            </ScrollViewer.Resources>
            <StackPanel x:Name="MessagesStackPanel"
                        Background="Transparent"
                        HorizontalAlignment="Stretch"
                        Margin="10,0,10,0">
                <ItemsControl ItemsSource="{Binding Messages}"
                              ItemTemplateSelector="{StaticResource MessageTemplateSelector}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>


        <StackPanel Grid.Row="2"
                    Margin="0,10,0,0"
                    Orientation="Vertical">
            <!-- Input area -->
            <Grid Margin="10"
                  HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid>
                    <TextBox x:Name="MessageInput"
                             Height="45"
                             Background="#FF1E1E1E"
                             Foreground="White"
                             Padding="10"
                             Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"
                             GotFocus="MessageInput_GotFocus"
                             LostFocus="MessageInput_LostFocus"
                             Margin="0,0,5,0"
                             VerticalScrollBarVisibility="Disabled"
                             BorderBrush="{x:Null}"
                             KeyDown="MessageInput_KeyDown"
                             Style="{StaticResource RoundedTextBox}" />
                    <TextBlock x:Name="MessagePlaceholder"
                               Text="Message..."
                               Foreground="#FF888888"
                               VerticalAlignment="Center"
                               Margin="12,0,5,0"
                               IsHitTestVisible="False">

                    </TextBlock>
                </Grid>

                <Button Command="{Binding SendMessageCommand}"
                        Grid.Column="1"
                        Margin="5,0"
                        Height="32"
                        Width="32"
                        Background="#FF007ACC"
                        Padding="5"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="16"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Canvas Width="16"
                            Height="16">
                        <Path Fill="#DDDDDD"
                              Data="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z" />
                        <Path Fill="#FFFFFF"
                              Data="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z" />
                    </Canvas>
                </Button>

                <Button Grid.Column="2"
                        Command="{Binding BuzzCommand}"
                        Height="32"
                        Width="32"
                        Margin="5,0,-1,0"
                        Background="#FF0000"
                        Padding="5"
                        BorderThickness="0"
                        Cursor="Hand"
                        ForceCursor="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="16"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Canvas Width="16"
                            Height="16">
                        <Path Fill="#DDDDDD"
                              Data="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2M8 1.918l-.797.161A4 4 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4 4 0 0 0-3.203-3.92zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5 5 0 0 1 13 6c0 .88.32 4.2 1.22 6" />
                        <Path Fill="#FFFFFF"
                              Data="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2M8 1.918l-.797.161A4 4 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4 4 0 0 0-3.203-3.92zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5 5 0 0 1 13 6c0 .88.32 4.2 1.22 6" />
                    </Canvas>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>

</UserControl>
